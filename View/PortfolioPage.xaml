<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="EquityX_L00160463.View.PortfolioPage"
             Title="Portfolio"
             BackgroundColor="White">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="20" Padding="20">


                <StackLayout>
                    <Label Text="All Assets" HorizontalOptions="CenterAndExpand" />
                    <micro:ChartView x:Name="chartView" HeightRequest="300" HorizontalOptions="CenterAndExpand" />
                    <Label Text="Total: $12,921" HorizontalOptions="CenterAndExpand" />
                </StackLayout>



                <Frame BackgroundColor="#f5f5f5" CornerRadius="10" HasShadow="True">
                    <StackLayout Padding="10">
                        <Label Text="Your Portfolio" FontSize="Medium" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Center" />

                        <!-- Asset1-->
                        <Frame BackgroundColor="#FFFFFF" CornerRadius="10" HasShadow="True" Padding="10" Margin="0,10,0,0">
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Image Source="logo.png" HeightRequest="80" WidthRequest="80" Aspect="AspectFit" HorizontalOptions="Start" />
                                <StackLayout Spacing="5">
                                    <Label Text="Amazon " FontSize="16" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Start" />
                                    <Label Text="Shares: 18" FontSize="14" TextColor="#666" HorizontalOptions="Start" />
                                    <Label Text="Value: $1,500.00" FontSize="14" TextColor="#666" HorizontalOptions="Start" />
                                </StackLayout>
                                <Button Text="Sell Asset" FontSize="14" BackgroundColor="#007ACC" TextColor="White" Clicked="SellAssetClicked" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </StackLayout>
                        </Frame>

                        <!-- Asset2 -->
                        <Frame BackgroundColor="#FFFFFF" CornerRadius="10" HasShadow="True" Padding="10" Margin="0,10,0,0">
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Image Source="dodge.png" HeightRequest="80" WidthRequest="80" Aspect="AspectFit" HorizontalOptions="Start" />
                                <StackLayout Spacing="5">
                                    <Label Text="Dodge Coin" FontSize="16" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Start" />
                                    <Label Text="Shares: 10" FontSize="14" TextColor="#666" HorizontalOptions="Start" />
                                    <Label Text="Value: $170.30" FontSize="14" TextColor="#666" HorizontalOptions="Start" />
                                </StackLayout>
                                <Button Text="Sell Asset" FontSize="14" BackgroundColor="#007ACC" TextColor="White" Clicked="SellAssetClicked" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </StackLayout>
                        </Frame>

                        <!-- Asset3 -->
                        <Frame BackgroundColor="#FFFFFF" CornerRadius="10" HasShadow="True" Padding="10" Margin="0,10,0,0">
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Image Source="github.png" HeightRequest="80" WidthRequest="80" Aspect="AspectFit" HorizontalOptions="Start" />
                                <StackLayout Spacing="5">
                                    <Label Text="Github" FontSize="16" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Start" />
                                    <Label Text="Shares: 1" FontSize="14" TextColor="#666" HorizontalOptions="Start" />
                                    <Label Text="Value: $120.40" FontSize="14" TextColor="#666" HorizontalOptions="Start" />
                                </StackLayout>
                                <Button Text="Sell Asset" FontSize="14" BackgroundColor="#007ACC" TextColor="White" Clicked="SellAssetClicked" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </StackLayout>
                        </Frame>

                        <!-- Asset4 -->
                        <Frame BackgroundColor="#FFFFFF" CornerRadius="10" HasShadow="True" Padding="10" Margin="0,10,0,0">
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Image Source="bitcoin.png" HeightRequest="80" WidthRequest="80" Aspect="AspectFit" HorizontalOptions="Start" />
                                <StackLayout Spacing="5">
                                    <Label Text="Bitcoin (BTC)" FontSize="16" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Start" />
                                    <Label Text="Shares: 7" FontSize="14" TextColor="#666" HorizontalOptions="Start" />
                                    <Label Text="Value: $173.00" FontSize="14" TextColor="#666" HorizontalOptions="Start" />
                                </StackLayout>
                                <Button Text="Sell Asset" FontSize="14" BackgroundColor="#007ACC" TextColor="White" Clicked="SellAssetClicked" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </StackLayout>
                        </Frame>

                        <!-- Asset5-->
                        <Frame BackgroundColor="#FFFFFF" CornerRadius="10" HasShadow="True" Padding="10" Margin="0,10,0,0">
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Image Source="facebook.png" HeightRequest="80" WidthRequest="80" Aspect="AspectFit" HorizontalOptions="Start" />
                                <StackLayout Spacing="5">
                                    <Label Text="Facebook" FontSize="16" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Start" />
                                    <Label Text="Shares: 5" FontSize="14" TextColor="#666" HorizontalOptions="Start" />
                                    <Label Text="Value: $240.00" FontSize="14" TextColor="#666" HorizontalOptions="Start" />
                                </StackLayout>
                                <Button Text="Sell Asset" FontSize="14" BackgroundColor="#007ACC" TextColor="White" Clicked="SellAssetClicked" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </StackLayout>
                        </Frame>

                        <!-- Asset6 -->
                        <Frame BackgroundColor="#FFFFFF" CornerRadius="10" HasShadow="True" Padding="10" Margin="0,10,0,0">
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Image Source="twitter.png" HeightRequest="80" WidthRequest="80" Aspect="AspectFit" HorizontalOptions="Start" />
                                <StackLayout Spacing="5">
                                    <Label Text="Twitter" FontSize="16" FontAttributes="Bold" TextColor="#333" HorizontalOptions="Start" />
                                    <Label Text="Shares: 3" FontSize="14" TextColor="#666" HorizontalOptions="Start" />
                                    <Label Text="Value: $20.00" FontSize="14" TextColor="#666" HorizontalOptions="Start" />

                                </StackLayout>
                                <Button Text="Sell Asset" FontSize="14" BackgroundColor="#007ACC" TextColor="White" Clicked="SellAssetClicked" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </StackLayout>
                        </Frame>


                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>

